<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ClassManagementSystemMAUIVersion.Views.SelectPage"
             Title="SelectPage"
             NavigationPage.HasNavigationBar="False">

    <FlexLayout Direction="Column">



        <!-- Body -->
        <FlexLayout FlexLayout.Grow="1">

            <!-- Content -->
            <HorizontalStackLayout FlexLayout.Grow="1" HorizontalOptions="Center" VerticalOptions="CenterAndExpand">
                <VerticalStackLayout Spacing="16"/>
                <Label
                    Text="Pilih Mode"/>
                <HorizontalStackLayout>
                    <Button Text="Reminder Tugas"/>
                    <Button Text="Jadwal Kelas"/>
                </HorizontalStackLayout>
            </HorizontalStackLayout>


            <!-- Aside items -->
            <BoxView FlexLayout.Basis="25%"
                     MinimumWidthRequest="100"
                     Color="DarkViolet" />

        </FlexLayout>

    </FlexLayout>


</ContentPage>